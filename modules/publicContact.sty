\newcommand*{\name}[2]{\def\@firstname{#1} \def\@lastname{#2}}
\newcommand*{\birth}[1]{\def\@birth{#1}}
\newcommand*{\citizenship}[1]{\def\@citizenship{#1}}
\newcommand*{\phone}[1]{\def\@phone{#1}}
