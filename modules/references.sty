\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{modules/references}

\newcommand*{\references}[1]{\def\@references{#1}}
\newcommand{\refgroupspacing}{0.5em}
\newcommand{\refentryspacing}{0.2em}
\newcommand{\draw@references}{%
  \begin{flushleft}
    \foreach[] \name/\pos/\phone/\email/\web in \@references
    {%
      \sidebarheaderstyle{\name}\\[\refentryspacing]
      \sidebarcontentstyle{\pos}\\[\refentryspacing]

      \sidebarheaderstyle{Phone:}  \\[\refentryspacing] \sidebarcontentstyle{\phone} \\[\refgroupspacing]
      \sidebarheaderstyle{Email:}  \\[\refentryspacing] \sidebarcontentstyle{\email}
      \ifdefempty{\web}
      {}
      {\\[\refgroupspacing] \sidebarheaderstyle{Web:}  \\[\refentryspacing] \sidebarcontentstyle{\web}}
      \\[2em]
    }
  \end{flushleft}
}

\endinput
